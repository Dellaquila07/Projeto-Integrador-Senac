@model Projeto_Integrador_Senac.Models.Venda

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Venda_ID" />
            <div class="form-group">
                <label asp-for="Cliente_ID" class="control-label">ID-Cliente</label>
                <input asp-for="Cliente_ID" class="form-control" />
                <span asp-validation-for="Cliente_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto_ID" class="control-label">ID-Produto</label>
                <input asp-for="Produto_ID" class="form-control" />
                <span asp-validation-for="Produto_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda_Quantidade" class="control-label">Quantidade</label>
                <input asp-for="Venda_Quantidade" class="form-control" />
                <span asp-validation-for="Venda_Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda_Preco" class="control-label">Preço da Venda</label>
                <input asp-for="Venda_Preco" class="form-control" />
                <span asp-validation-for="Venda_Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda_Data" class="control-label">Data da Venda</label>
                <input asp-for="Venda_Data" class="form-control" />
                <span asp-validation-for="Venda_Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
