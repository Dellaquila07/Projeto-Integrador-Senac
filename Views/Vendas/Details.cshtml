@model Projeto_Integrador_Senac.Models.Venda

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID-Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente_ID)
        </dd>
        <dt class = "col-sm-2">
            ID-Produto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto_ID)
        </dd>
        <dt class = "col-sm-2">
            Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venda_Quantidade)
        </dd>
        <dt class = "col-sm-2">
            Preço da Venda
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venda_Preco)
        </dd>
        <dt class = "col-sm-2">
            Data da Venda
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venda_Data)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Venda_ID">Editar</a> |
    <a asp-action="Index">Voltar para a lista</a>
</div>
