@model Projeto_Integrador_Senac.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cliente_Nome" class="control-label">Nome</label>
                <input asp-for="Cliente_Nome" class="form-control" />
                <span asp-validation-for="Cliente_Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente_Sobrenome" class="control-label">Sobrenome</label>
                <input asp-for="Cliente_Sobrenome" class="form-control" />
                <span asp-validation-for="Cliente_Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente_Dt_Nasc" class="control-label">Data de Nascimento</label>
                <input asp-for="Cliente_Dt_Nasc" class="form-control" />
                <span asp-validation-for="Cliente_Dt_Nasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente_Celular" class="control-label">Celular</label>
                <input asp-for="Cliente_Celular" class="form-control" />
                <span asp-validation-for="Cliente_Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente_Email" class="control-label">Email</label>
                <input asp-for="Cliente_Email" class="form-control" />
                <span asp-validation-for="Cliente_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
