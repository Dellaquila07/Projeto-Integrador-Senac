@model Projeto_Integrador_Senac.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto_Descricao)
        </dd>
        <dt class = "col-sm-2">
            Preço de Custo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto_Preco_Custo)
        </dd>
        <dt class = "col-sm-2">
            Preço de Venda
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto_Preco_Venda)
        </dd>
        <dt class = "col-sm-2">
            Quantidade no Estoque
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto_Quantidade_Estoque)
        </dd>
        <dt class = "col-sm-2">
            Ativo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto_Ativo)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Produto_ID">Editar</a> |
    <a asp-action="Index">Voltar para a lista</a>
</div>
